{
  "ts-node": {
    "swc": true,
  },
    "compilerOptions": {
      "module": "NodeNext",
      "target": "es2017",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }